@model EShopMVC_Net7.ViewModels.Account.LoginVM

@{
    ViewData["Title"] = "Login";
}
@section scripts{
    <partial name="_Validation" />
}



<hr />
<div class="row">
    <div class="col-md-4 mx-auto mt-4">
        <form asp-action="Login" method="post">
            <h3 class="mt-3 mb-3 text-center ">Đăng nhập tài khoản</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật Khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-3 l-">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

