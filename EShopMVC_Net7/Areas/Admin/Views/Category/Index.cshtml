@{
    ViewData["title"] = "Quan li danh muc san pham";
}
@section head{
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/awesome-notifications/style.min.css" rel="stylesheet" />
}
@section scripts{
    <script defer src="~/lib/alpinejs/cdn.min.js"></script>
    <script src="~/js/admin/category.js" asp-append-version="true"></script>
    <script src="~/lib/awesome-notifications/index.var.min.js"></script>
    

}



<div class="row" x-data="category">
    <div class="col-12 mt-5">
        <button class="btn btn-primary" x-on:click="openModalAdd"> 
            Thêm mới
            <i class="bi bi-bag-plus-fill"></i>
        </button>
    </div>
    <div class="col-12 mt-3">
        <table class="table table-bordered">
            <colgroup>
                <col style="width:10%" />
                <col style="width:75%" />
                <col style="width:15%" />
            </colgroup>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên danh mục</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <template x-for="i in _list">
                    <tr>
                        <td x-text="i.id"></td>
                        <td x-text="i.name"></td>
                        <td>
                            <button class="btn btn-info" x-on:click="openModalUpdate(i.id)">
                              Sửa  <i class="bi bi-pen"></i>
                            </button>
                            <button class="btn btn-danger" x-on:click="RemoveCategory(i.id)">
                                Xóa <i class="bi bi-trash"></i>
                            </button>
                        </td>
                        <td></td>
                    </tr>
                </template>
            </tbody>
        </table>
        <partial name="_Pager" model="Model" />
    </div>


    @* <!-- Button trigger modal -->
    <button class="btn btn-primary" data-bs-toggle="caterogyUpdinModal" data-bs-target="#caterogyUpdinModal">
    Them moi danh muc
    </button> *@

    <!-- Modal -->
    <div class="modal fade" id="categoryUpdinModal" tabindex="-1" aria-labelledby="categoryUpdinModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" x-text="_modalSetting.title"></h1>
                    <button type="button" class="btn-close" x-on:click="closeModal()" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mt-3">
                        <label class="form-label">Tên danh mục</label>
                        <input class="form-control" x-model="_updinData.name" />
                        <small x-text="_updinData.slug" class="fst-italic"></small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" x-on:click="closeModal()" data-bs-dismiss="modal">Đóng<i class="bi bi-x-lg"></i></button>
                    <button type="button" class="btn btn-success" x-text="_modalSetting.primaryButtonText" x-on:click="saveCategory()"> Thêm  </button>
                </div>
            </div>
        </div>
    </div>


</div>



