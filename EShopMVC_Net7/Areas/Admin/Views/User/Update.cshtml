@model EShopMVC_Net7.Models.AppUser

@{
    ViewData["Title"] = "Update";
}
@section scripts{
    <partial name="_Validation" />

}

<h1>Update</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mt-3">
                <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                <input class="form-control" disabled value="@Model.Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label class="control-label">
                    <input asp-for="Role" value="@UserRole.ROLEADMIN"  type="radio" /> Admin
                </label>

                <label class="control-label">
                    <input asp-for="Role" value="@UserRole.ROLECUSTOMER"  type="radio" /> Customer
                </label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Phone" class="control-label">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Address" class="control-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Cập nhật tài khoản" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Về trang danh sách</a>
</div>

